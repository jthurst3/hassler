<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@post.errors.count, "error") %> prohibited
      this post from being saved:</h2>
    <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, :size => 50 %>
  </p>

  <p>
    <%= f.label :caption %><br>
    <%= f.text_area :caption, :cols => 50, :rows => 3 %>
  </p>

  <p>
    <%= f.label :url %><br>
    <%= f.text_field :url, :size => 50 %>
  </p>

  <p>
    <%= f.label :file %> (Picture)<br>
    <%= f.text_field :file, :size => 50 %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text, :cols => 50, :rows => 10 %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>