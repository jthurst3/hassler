

<% provide(:title, 'Blog') %>

	<h1>Blog</h1>
	<br>
    	<div class="container-fluid">
			<% @posts.each do |post| %>
				<div class="row">
					<div class="col-md-3 col-md-offset-3">
						<p><%= image_tag post.file, height:"150", width:"200" %></p>
					</div>
					<div class="col-md-4">
						<h3><%= link_to post.title, post_path(post) %></h3><br>
						<%= post.caption %>
					</div>
				</div>
				<div class="row">
					<div class="col-md-5 col-md-offset-4">
						<hr>
					</div>
				</div>
			<% end %>
		</div>